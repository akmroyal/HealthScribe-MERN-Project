generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
  role     Role
  doctor   Doctor?
  patient  Patient?
}

model Doctor {
  id                 Int     @id @default(autoincrement())
  userId             Int     @unique
  name               String
  email              String
  mobile             String
  specialty          String
  licenseNumber      String
  yearsOfExperience  Int
  boardCertification String
  medicalSchool      String
  graduationYear     Int
  address            String
  bio                String
  verified           Boolean @default(false)
  user               User    @relation(fields: [userId], references: [id])
}

model Patient {
  id         Int     @id @default(autoincrement())
  userId     Int     @unique
  fullName   String
  email      String
  mobile     String
  age        Int
  agreeTerms Boolean @default(false)
  user       User    @relation(fields: [userId], references: [id])
}

enum Role {
  DOCTOR
  PATIENT
}
